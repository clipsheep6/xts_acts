import("//build/ohos.gni")
import("//build/test.gni")
import("//foundation/multimodalinput/input/multimodalinput_mini.gni")
module_output_path = "multimodalinput/systemtest_out"

ohos_systemtest("mmi_st_demo_single_window_registered_test") {
  module_out_path = module_output_path
  sources = [ "single_window_registered_test.cpp" ]

  deps = [
    "//test/xts/acts/multimodalinput/lib/mmi_st_client:mmi_st_client",
    "//third_party/googletest:gtest",
    "//third_party/googletest:gtest_main",
  ]

  external_deps = [ "hiviewdfx_hilog_native:libhilog" ]
}

ohos_systemtest("multi_handout_keyboard_reg_reg_A") {
  module_out_path = module_output_path
  sources = [ "multi_handout_keyboard_reg_reg_A.cpp" ]

  deps = [
    "//test/xts/acts/multimodalinput/lib/mmi_st_client:mmi_st_client",
    "//third_party/googletest:gtest",
    "//third_party/googletest:gtest_main",
  ]

  external_deps = [ "hiviewdfx_hilog_native:libhilog" ]
}

group("mmi_st_demo") {
  testonly = true
  deps = [
    ":mmi_st_demo_single_window_registered_test",
    ":multi_handout_keyboard_reg_reg_A",
  ]
}
