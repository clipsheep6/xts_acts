import("//build/ohos.gni")

ohos_executable("vendor_controller") {
  install_enable = true
  MOCK_VENDOR_HOME="//test/xts/acts/telephony/telephonycpptest/mock_vendor"
  sources = [
      "$MOCK_VENDOR_HOME/mock_vendor.cpp",
      "vendor_controller.cpp",
      "call_info_callback.cpp",
      "//base/telephony/core_service/interfaces/innerkits/call_manager/proxy/call_manager_service_proxy.cpp",
  ]

  include_dirs = [
      "../utils/",
      "//base/telephony/core_service/interfaces/innerkits/call_manager/proxy/",
      "//base/telephony/core_service/interfaces/innerkits/call_manager/common/",
      "//base/telephony/core_service/interfaces/innerkits/cellular_call/common",
      "//base/telephony/call_manager/interfaces/kits/call_service_ability/native/include/",
      "//base/telephony/call_manager/interfaces/kits/native/include",
      "//foundation/distributedschedule/samgr/interfaces/innerkits/samgr_proxy/include/",
      "//utils/system/safwk/native/include/",
      "//distributedschedule/samgr/interfaces/innerkits/samgr_proxy/include/",
      "//base/telephony/core_service/interfaces/innerkits/call_manager/proxy/",
      "$MOCK_VENDOR_HOME/",
      "../mock_vendor/include"
  ]

  deps = [
    "//foundation/aafwk/standard/frameworks/kits/ability/native:abilitykit_native",
    "//base/telephony/core_service/common:libtelephony_common",
  ]

  external_deps = [
    "safwk:system_ability_fwk",
    "appexecfwk_standard:libeventhandler",
    "samgr_L2:samgr_proxy",
    "ipc:ipc_core",
    "aafwk_standard:want",
  ]

  if (is_standard_system) {
    external_deps += [ "hiviewdfx_hilog_native:libhilog" ]
  } else {
    external_deps += [ "hilog:libhilog" ]
  }

  part_name = "mock_vendor"
  subsystem_name = "telephonycpptest"
}
