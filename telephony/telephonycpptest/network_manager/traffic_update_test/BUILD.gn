import("//build/ohos.gni")
import("//build/test.gni")
import("//test/xts/tools/build/suite.gni")
import("//drivers/adapter/uhdf2/uhdf.gni")
import("//foundation/communication/netmanager_base/netmanager_base_config.gni")

ohos_moduletest_suite("TrafficUpdateTest") {
    install_enable = true
    sources = [
        "src/traffic_update_test.cpp",
    ]

    include_dirs = [
        "//test/xts/acts/telephony/telephonycpptest/network_manager/include",
        "$INNERKITS_ROOT/netstatsclient/include",
        "$NETCONNMANAGER_COMMON_DIR/include",
        "$NETSTATSMANAGER_SOURCE_DIR/include/stub",
        "$NETSTATSMANAGER_SOURCE_DIR/include",
        "$NETDCONTROLLER_ROOT_DIR/include"
    ]

   deps = [
        "$NETDCONTROLLER_ROOT_DIR:netd_controller",
        "$NETMANAGER_BASE_ROOT/utils:net_manager_common",
        "$INNERKITS_ROOT/netstatsclient:net_stats_manager_if",
        "//base/hiviewdfx/hilog/interfaces/native/innerkits:libhilog",
        "//utils/native/base:utils"
    ]

    external_deps = [
        "safwk:system_ability_fwk",
        "ipc:ipc_core",
    ]

  defines = [
        "TAG = \"TrafficStatTest\"",
        "LOG_DOMAIN = 0xD002B01",
    ]

  if (is_standard_system) {
    external_deps += [ "hiviewdfx_hilog_native:libhilog" ]
  } else {
    external_deps += [ "hilog:libhilog" ]
  }
  part_name = "telephonycpptest"

  subsystem_name = "telephony"
}