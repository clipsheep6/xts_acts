{
    "description": "Function test of Https Certificate Test",
    "driver": {
        "type": "OHJSUnitTest",
        "test-timeout": "900000",
        "bundle-name": "com.ohos.actshttpscertificatetest",
        "package-name": "com.ohos.actshttpscertificatetest",
        "shell-timeout": "900000",
        "testcase-timeout": "30000"
    },
    "kits": [
        {
            "test-file-name": [
                "$module.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },
        {
            "type" : "ShellKit",
            "run-command" : [
                "mount -o rw,remount /",
                "mkdir -p /etc/ssl/test",
                "mkdir -p /data/app/el2/100/base/com.ohos.actshttpscertificatetest/test"
            ]
        },
        {
            "type" : "PushKit",
            "push" : [
                "./resource/netmanager/OpenHarmonyCA.pem -> /etc/ssl/certs/OpenHarmonyCA.pem",
                "./resource/netmanager/OpenHarmonyCA.pem -> /data/app/el2/100/base/com.ohos.actshttpscertificatetest/files"
            ]
        },
        {
            "type" : "ShellKit",
            "teardown-command" : [
                "rm -r /etc/ssl/certs/OpenHarmonyCA.pem"
            ]
        }
    ]
}
