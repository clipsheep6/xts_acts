{
    "description": "Configuration for hjunit demo Tests",
    "driver": {
        "type": "OHJSUnitTest",
        "test-timeout": "180000",
        "shell-timeout": "180000",
        "bundle-name": "com.ohos.network_nowifi",
        "package-name": "com.ohos.network_nowifi"
    },
    "kits": [
        {
            "test-file-name": [
              "$module.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },{
            "type": "ShellKit",
            "run-command": [
                "power-shell wakeup",
                "power-shell setmode 602"
            ]
        },
        {
          "type": "ShellKit",
          "run-command": [
              "chmod 777 -R /data/local/tmp/xts-test"
          ]
      }
    ]
}