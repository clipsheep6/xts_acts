{
    "description": "Configuration for hjunit demo Tests",
    "driver": {
        "type": "OHJSUnitTest",
        "test-timeout": "300000",
        "bundle-name": "ohos.acts.image.imagePackExif",
        "module-name": "entry",
        "shell-timeout": "300000",
        "testcase-timeout": 60000
    },
    "kits": [
        {
            "test-file-name": [
                "ActsImagePackExifAbilityTest.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },
        {
            "type": "ShellKit",
            "run-command": [
                "mkdir -p /data/app/el2/100/base/ohos.acts.image.imagePackExif/haps/entry/files/",
                "chmod -R 666 /data/app/el2/100/base/ohos.acts.image.imagePackExif/haps/entry/files/*",
                "mkdir -p /data/app/el2/100/base/ohos.acts.image.imagePackExif/haps/entry/cache/",
                "chmod -R 777 /data/app/el2/100/base/ohos.acts.image.imagePackExif/haps/entry/cache/*"
            ]
        },
        {
            "type": "PushKit",
            "pre-push": [],
            "push": [
                "./resource/image/test_exif_jpeg.jpg ->/data/app/el2/100/base/ohos.acts.image.imagePackExif/haps/entry/files",
                "./resource/image/test_exif_png.png ->/data/app/el2/100/base/ohos.acts.image.imagePackExif/haps/entry/files",
                "./resource/image/test_exif_webp.webp ->/data/app/el2/100/base/ohos.acts.image.imagePackExif/haps/entry/files"
            ]
        }
    ]
}
