{
  "description": "Configuration for profile Tests",
  "driver": {
    "type": "JSUnitTest",
    "test-timeout": "2000000",
    "package": "ohos.acts.multimedia.media.recorderCaps",
    "shell-timeout": "60000"
  },
  "kits": [
    {
      "test-file-name": [
        "ActsProfileJsTest.hap"
      ],
      "type": "AppInstallKit",
      "cleanup-apps": true
    },
    {
      "type": "ShellKit",
      "run-command": [
        "rm -rf /storage/media/100/local/files/*",
        "mkdir -p /data/app/el1/bundle/public/ohos.acts.multimedia.audio.profile/ohos.acts.multimedia.audio.profile/assets/entry/resources/rawfile/",
        "chmod 777 -R /data/app/el1/bundle/public/ohos.acts.multimedia.audio.profile/ohos.acts.multimedia.audio.profile/assets/entry/resources/rawfile/"
      ],
      "teardown-command": []
    },
    {
      "type": "ShellKit",
      "run-command": [
        "chmod 777 -R /data/app/el1/bundle/public/ohos.acts.multimedia.audio.profile/ohos.acts.multimedia.audio.profile/assets/entry/resources/rawfile/",
        "chmod 777 /data/app/el1/bundle/public/ohos.acts.multimedia.audio.profile/ohos.acts.multimedia.audio.profile/assets/entry/resources/rawfile/*",
        "chmod 777 -R  /storage/media/100/local/files/",
        "chmod 777 /storage/media/100/local/files/*",
        "killall com.ohos.medialibrary.MediaScannerAbilityA",
        "aa start  -a MediaScannerAbility -b com.ohos.medialibrary.MediaScannerAbilityA"
      ],
      "teardown-command": []
    }
  ]
}