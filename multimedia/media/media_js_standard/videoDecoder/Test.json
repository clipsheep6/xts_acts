            ]
        },
        {
            "type": "ShellKit",
            "run-command": [
                "chmod 777 -R /data/app/el2/100/base/ohos.acts.multimedia.video.videodecoder/haps/entry/files/",
                "chmod 777 /data/app/el2/100/base/ohos.acts.multimedia.video.videodecoder/haps/entry/files/*"
            ],
            "teardown-command": []
