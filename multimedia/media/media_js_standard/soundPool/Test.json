{
    "description": "Configuration for soundPool Tests",
    "driver": {
        "type": "OHJSUnitTest",
        "test-timeout": "1500000",
        "shell-timeout": "600000",
        "bundle-name": "com.example.soundpoolxts",
        "package-name": "com.example.soundpoolxts",
        "testcase-timeout": "1100000"
    },
    "kits": [
        {
            "test-file-name": [
                "ActsSoundPoolTest.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },
        {
            "type": "ShellKit",
            "run-command": [
                "mkdir -p /data/app/el2/100/base/com.example.soundpoolxts/haps/entry/files",
                "chmod 777 -R /data/app/el2/100/base/com.example.soundpoolxts/haps/entry"
            ]
        },
        {
            "type": "PushKit",
            "pre-push": [],
            "push": [
                "./resource/soundpool/test_01.mp3 ->/data/app/el2/100/base/com.example.soundpoolxts/haps/entry/files/",
                "./resource/soundpool/test_02.mp3 ->/data/app/el2/100/base/com.example.soundpoolxts/haps/entry/files/",
                "./resource/soundpool/test_03.mp3 ->/data/app/el2/100/base/com.example.soundpoolxts/haps/entry/files/",
                "./resource/soundpool/test_04.mp3 ->/data/app/el2/100/base/com.example.soundpoolxts/haps/entry/files/"
            ]
        }
    ]
}