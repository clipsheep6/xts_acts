{
    "description": "Configuration for audio capturer enhance Tests",
    "driver": {
        "type": "OHJSUnitTest",
        "test-timeout": "3000000",
        "bundle-name":"com.example.xts_audiocapturerenhance",
        "package-name": "com.example.xts_audiocapturerenhance",
        "shell-timeout": "600000",
		"testcase-timeout": "100000"
    },
    "kits": [
        {
            "test-file-name": [
                "ActsAudioCapturerEnhanceTest.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },
        {
            "type": "ShellKit",
            "run-command": [
                "power-shell wakeup",
                "uinput -T -d 300 600 -m 300 600 300 100 -u 300 100",
                "power-shell setmode 602"
            ],
            "teardown-command":[
                "power-shell setmode 600"
            ]
        }
    ]
}