import("//build/ohos.gni")
import("//test/xts/tools/build/suite.gni")

ohos_app_assist_suite("OhAudio_ndk_main") {
  testonly = true
  certificate_profile = "./signature/openharmony_sx.p7b"
  hap_name = "OhAudioNdkMainTest"
  subsystem_name = "multimedia"
  part_name = "audio_framework"
}

ohos_js_app_suite("OhRendererTest") {
  test_hap = true
  testonly = true
  certificate_profile = "./signature/openharmony_sx.p7b"
  hap_name = "OhRendererTest"
  subsystem_name = "multimedia"
  part_name = "audio_framework"
  deps = [ ":OhAudio_ndk_main" ]
}

ohos_js_app_suite("OhCapturerTest") {
  test_hap = true
  testonly = true
  certificate_profile = "./signature/openharmony_sx.p7b"
  hap_name = "OhCapturerTest"
  subsystem_name = "multimedia"
  part_name = "audio_framework"
  deps = [ ":OhAudio_ndk_main" ]
}


AUDIO_ROOT_DIR = "//foundation/multimedia/audio_framework/"

ohos_moduletest_suite("ActsOhaudioNdkTest") {
  module_out_path = "acts/ActsOhaudioNdkTest"
  sources = [ "ActsOhaudioNdkTest.cpp" ]

  include_dirs = [
    "$AUDIO_ROOT_DIR/interfaces/kits/c/",
    "$AUDIO_ROOT_DIR/interfaces/kits/c/common/",
    "$AUDIO_ROOT_DIR/interfaces/kits/c/audio_renderer/",
    "$AUDIO_ROOT_DIR/interfaces/kits/c/audio_capturer/",
  ]

  cflags = [
    "-Werror",
    "-fno-rtti",
    "-fno-exceptions",
    "-Wall",
    "-fno-common",
    "-fstack-protector-strong",
    "-Wshadow",
    "-FPIC",
    "-FS",
    "-O2",
    "-D_FORTIFY_SOURCE=2",
    "-fvisibility=hidden",
    "-Wformat=2",
    "-Wdate-time",
    "",
  ]

  deps = [ "$AUDIO_ROOT_DIR/frameworks/native/ohaudio:ohaudio" ]
  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
  ]

  part_name = "audio_framework"
  subsystem_name = "multimedia"
}
