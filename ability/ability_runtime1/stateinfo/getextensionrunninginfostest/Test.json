{
    "description": "Configuration for hjunit demo Tests",
    "driver": {
        "type": "OHJSUnitTest",
        "test-timeout": "180000",
        "shell-timeout": "180000",
        "bundle-name": "com.hits.stateinfo.getrunninginfotest",
        "module-name": "entry_test",
		"testcase-timeout": "20000"
    },
    "kits": [
        {
            "test-file-name": [
                "HitsStateInfoGetRunningInfoTest.hap",
				"HitsStateInfoServicAppA.hap",
				"HitsStateInfoAppA.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },{
            "type": "ShellKit",
            "run-command": [
                "power-shell wakeup",
                "power-shell setmode 602"
            ]
        },
        {
            "type": "PushKit",
            "push": [
                "HitsStateInfoServicAppA.hap->/data/app/el2/100/base/com.hits.stateinfo.getrunninginfotest/files/",
                "HitsStateInfoAppA.hap->/data/app/el2/100/base/com.hits.stateinfo.getrunninginfotest/files/",
            ]
        },
        {
            "type": "ShellKit",
            "teardown-command": [
                "bm uninstall -n com.hits.stateinfo.serviceappa",
                "bm uninstall -n com.hits.stateinfo.appa"
            ]
        }
    ]
}