
{
    "description": "Configuration for hjunit demo Tests",
    "driver": {
        "type": "JSUnitTest",
        "test-timeout": "120000",
        "package": "com.example.actsconnectabilitysystemabilitytest",
        "shell-timeout": "60000"
    },
    "kits": [
        {
            "type": "ShellKit",
            "run-command": [
                "acm create -n 101 -t normal",
                "acm switch -i 101"
            ],
            "teardown-command":[
                "acm delete -i 101"
            ]
        },
        {
            "test-file-name": [
                "ActsConnectAbilitySystemAbilityTest.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        }
        
    ]
}

