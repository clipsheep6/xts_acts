{
    "description": "Configuration for hjunit demo Tests",
    "driver": {
        "type": "OHJSUnitTest",
        "test-timeout": "180000",
        "bundle-name": "com.example.nopermissionstartrecent",
        "module-name": "phone",
        "shell-timeout": "600000",
        "testcase-timeout": 70000
    },
    "kits": [
        {
            "test-file-name": [
                "ActsNoPermissionStartRecent.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },
        {
            "type": "ShellKit",
            "run-command": [
                "remount",
                "mkdir /data/test"
            ]
        },
        {
            "type": "PushKit",
            "push": [
                "ActsNoPermissionStartRecent.hap->/data/test/ActsNoPermissionStartRecent.hap"
            ]
        },
        {
            "type": "ShellKit",
            "run-command": [
                "chmod 644 /data/test/*.hap"
            ]
        }
    ]
}