{
  "description": "Configuration for debuggable demo Tests",
  "driver": {
    "type": "OHJSUnitTest",
    "test-timeout": "1800000",
    "bundle-name": "com.acts.flagstartwithouttipstest",
    "module-name": "entry",
    "shell-timeout": "600000",
    "testcase-timeout": 60000
  },
  "kits": [
    {
      "test-file-name": [
        "ActsFlagStartWithoutTipsHap.hap",
        "ActsFlagStartWithoutTipsHap1.hap",
        "ActsFlagStartWithoutTipsTest.hap"
      ],
      "type": "AppInstallKit",
      "cleanup-apps": true
    },
    {
      "type": "ShellKit",
      "run-command": [
        "param set persist.ace.testmode.enabled 1",
        "param set persist.sys.suspend_manager_enabled false",
        "reboot",
        "power-shell wakeup",
        "uinput -T -m 300 2700 280 200",
        "power-shell setmode 602"
      ],
      "teardown-command": [
        "param set persist.sys.suspend_manager_enabled true",
        "power-shell setmode 601",
        "reboot"
      ]
    }
  ]
}