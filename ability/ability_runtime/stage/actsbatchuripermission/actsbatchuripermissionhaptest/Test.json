{
    "description": "Configuration for hjunit demo Tests",
    "driver": {
        "type": "OHJSUnitTest",
        "test-timeout": "180000",
        "bundle-name": "com.example.batchuri",
        "module-name": "entry",
        "shell-timeout": "600000",
        "testcase-timeout": 150000
    },
    "kits": [
        {
            "test-file-name": [
                "ActsBatchUriPermissionHapTest.hap",
                "ActsBatchUriPermissionRecvHap.hap",
                "ActsBatchUriPermissionUiextHap.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },
        {
          "type": "ShellKit",
          "run-command": [
              "power-shell wakeup",
              "power-shell setmode 602",
              "uinput -T -m 300 2700 280 200"
          ]
      }
    ] 
}
