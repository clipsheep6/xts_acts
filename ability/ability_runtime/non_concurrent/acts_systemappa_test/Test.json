{
    "description": "Configuration for hjunit demo Tests",
    "driver": {
        "type": "JSUnitTest",
        "test-timeout": "300000",
        "package": "com.example.actsabilitypermissiontest",
        "shell-timeout": "300000"
    },
    "kits": [
        {
            "test-file-name": [
                "ActsSystemAppATest.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },
        {
            "type": "ShellKit",
            "run-command": [
                "remount"
            ]
        },
        {
            "type": "PushKit",
            "push": [
                "ActsSystemAppATest.hap->/system/app/ActsSystemAppATest.hap"
            ]
        },
        {
            "type": "ShellKit",
            "run-command": [
                "acm create -n 101 -t normal",
                "acm switch -i 101"
            ]
        },
        {
            "type": "PushKit",
            "push": [
                "ActsSystemAppOneRelyHap.hap->/system/app/ActsSystemAppOneRelyHap.hap"
            ]
        },
		 {
            "test-file-name": [
                "ActsSystemAppOneRelyHap.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },
        {
            "type": "ShellKit",
            "run-command": [
                "acm switch -i 100"
            ]
        },
        {
            "type": "ShellKit",
            "run-command": [
                "chmod 644 /data/*.hap"
            ]
        }
    ]
}