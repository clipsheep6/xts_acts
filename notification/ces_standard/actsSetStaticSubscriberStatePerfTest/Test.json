{
    "description": "Configuration for hjunit demo Tests",
    "driver": {
        "type": "OHJSUnitTest",
        "test-timeout": "300000",
        "bundle-name": "com.acts.setstaticsubscriberstateperftest",
        "module-name": "entry",
        "shell-timeout": "600000",
        "testcase-timeout": 300000
    },
    "kits": [
        {
            "test-file-name": [
                "ActsSetStaticSubscriberStatePerfTest.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },
        {
            "type":"ShellKit",
            "run-command":[
                "anm setting -e com.acts.setstaticsubscriberstateperftest:0:1",
                "param set persist.sys.suspend_manager_enabled false",
                "reboot"
            ],
            "cleanup-apps":true
        },
        {
            "type":"ShellKit",
            "teardown-command":[
                "param set persist.sys.suspend_manager_enabled true",
                "reboot"
            ],
            "cleanup-apps":true
        }
    ] 
}
