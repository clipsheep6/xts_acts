{
  "description": "Configuration for hjunit demo Tests",
  "driver": {
    "type": "OHJSUnitTest",
    "test-timeout": "180000",
    "bundle-name": "com.example.orientationtest",
    "module-name": "entry_test",
    "shell-timeout": "600000"
  },
  "kits": [
    {
      "test-file-name": [
        "ActsBmsOrientationFollowRecentRelyHap.hap",
        "ActsBmsOrientationTest.hap"
      ],
      "type": "AppInstallKit",
      "cleanup-apps": true
    },
    {
      "type": "ShellKit",
      "run-command": [
        "power-shell wakeup",
        "power-shell setmode 602"
      ]
    }
  ]
}