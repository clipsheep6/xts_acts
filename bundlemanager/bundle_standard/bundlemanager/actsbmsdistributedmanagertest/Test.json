{
    "description": "Configuration for hjunit demo Tests",
    "driver": {
        "type": "OHJSUnitTest",
        "test-timeout": "120000",
        "bundle-name": "com.example.actsbmsdistributedmanager",
        "package-name": "com.example.actsbmsdistributedmanager",
        "shell-timeout": "60000"
    },
    "kits": [
        {
            "test-file-name": [
                "ActsBmsDistributedManagerTest.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },
        {
            "type": "ShellKit",
            "run-command": [
                "remount",
                "mkdir /data/test"
            ]
        },
        {
            "type": "PushKit",
            "push": []
        },
        {
            "type": "ShellKit",
            "run-command": [],
            "teardown-command":[
                "rm -rf /data/test/"
            ]
        }
    ]
}
