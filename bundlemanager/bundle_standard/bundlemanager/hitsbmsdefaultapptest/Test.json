{
    "description": "Configuration for hjunit demo Tests",
    "driver": {
        "type": "OHJSUnitTest",
        "test-timeout": "180000",
        "shell-timeout": "180000",
        "bundle-name": "com.hits.bms.defaultapptest",
        "module-name": "entry_test",
		"testcase-timeout": "20000"
    },
    "kits": [
        {
            "test-file-name": [
                "HitsBmsDefaultAppTest.hap",
                "HitsBmsDefaultApp.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },{
            "type": "ShellKit",
            "run-command": [
                "power-shell wakeup",
                "power-shell setmode 602"
            ]
        },
        {
            "type": "ShellKit",
            "teardown-command": [
                "bm uninstall -n com.hits.defaultapp"
            ]
        }
    ]
}