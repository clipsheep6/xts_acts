{
    "description": "Configuration for systemApi Tests",
    "driver": {
        "type": "OHJSUnitTest",
        "test-timeout": "600000",
        "bundle-name": "com.ohos.systemwithpermissiontest",
        "package-name": "com.ohos.systemwithpermissiontest",
        "shell-timeout": "600000"
    },
    "kits": [
        {
            "test-file-name": [
                "bmssystemwithpermissiontest.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },
        {
            "type": "ShellKit",
            "run-command": [
                "remount",
                "mkdir /data/test/"
            ]
        },
        {
            "type": "PushKit",
            "push":[
                "bmsStageDemo1.hap -> /data/test/bmsStageDemo1.hap",
                "bmsStageDemo2.hap -> /data/test/bmsStageDemo2.hap",
                "bmsThirdBundleTest7.hap->/data/test/bmsThirdBundleTest7.hap",
                "bmsJstest1.hap -> /data/test/bmsJstest1.hap"
            ]
        },
        {
            "type": "ShellKit",
            "run-command": [
                "bm install -p /data/test/bmsStageDemo1.hap",
                "bm install -p /data/test/bmsStageDemo2.hap",
                "bm install -p /data/test/bmsThirdBundleTest7.hap",
                "bm install -p /data/test/bmsJstest1.hap"
            ],
            "teardown-command":[
                "bm uninstall -n ohos.acts.bundle.stage",
                "bm uninstall -n com.example.myapplication1",
                "bm uninstall -n com.example.third7"
            ]
        }
    ]
}
