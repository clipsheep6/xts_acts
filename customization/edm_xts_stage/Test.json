{
    "description": "Configuration for hjunit demo Tests",
    "driver": {
        "type": "JSUnitTest",
        "test-timeout": "180000",
        "package": "com.example.myapplication",
        "shell-timeout": "600000"
    },
    "kits": [
        {
            "type": "ShellKit",
            "run-command": [
                "acm create -n edmuser -t normal"
            ],
            "teardown-command": [
                "acm delete -i 101"
            ]
        },
        {
        "test-file-name": [
            "ActsEdmTest.hap",
            "ExtensionZeroTest.hap"
        ],
        "type": "AppInstallKit",
        "cleanup-apps": true
        }
    ]
}