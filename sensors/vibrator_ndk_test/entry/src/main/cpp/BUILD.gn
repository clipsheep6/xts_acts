import("//build/config/ohos/config.gni")
import("//build/ohos.gni")
import("//foundation/arkui/napi/napi.gni")

VIBRATOR_ROOT_DIR = "//base/sensors/miscdevice/"
config("config") {
  visibility = [ ":*" ]
  cflags = [
    "-Wall",
    "-Werror",
    "-g3",
    "-Wunused-variable",
  ]
}

ohos_shared_library("vibratorNdkTest") {
  sources = [ "./napi/vibratorTest.cpp" ]
  if (use_musl) {
    libs = [ rebase_path(libcxx_ndk_shared_file) ]
  }
  include_dirs = [
    "$VIBRATOR_ROOT_DIR/interfaces/kits/c/",
    "$VIBRATOR_ROOT_DIR/interfaces/inner_api/vibrator/",
  ]
  configs = [ ":config" ]
  deps = [
    "$VIBRATOR_ROOT_DIR/frameworks/capi:ohvibrator",
    "$VIBRATOR_ROOT_DIR/interfaces/kits/c:lib_vibrator_ndk",
  ]
  external_deps = [
    "hilog:libhilog",
    "napi:ace_napi",
  ]

  output_extension = "so"
  part_name = "miscdevice"
  subsystem_name = "sensors"
}
