import("//test/xts/tools/build/suite.gni")
module_output_path = "acts/nnrt"

config("ops_config") {
  include_dirs = [
    "include",
    "../../../../../../foundation/ai/neural_network_runtime",
    "../../../../../../foundation/ai/neural_network_runtime/frameworks/native/neural_network_runtime",
    "../../../../../../foundation/ai/neural_network_runtime/frameworks/native/neural_network_core",
    "../../../../../../third_party/mindspore/mindspore-src/source/mindspore/lite/mindir/include",
  ]
  cflags = [ "-Wno-error" ]
  cflags_cc = [ "-fexceptions" ]
}

ohos_moduletest_suite("ActsOpsTest") {
  module_out_path = module_output_path
  sources = [
    "src/abs_test.cpp",
    "src/broadcast_to_test.cpp",
    "src/clip_test.cpp",
    "src/constant_of_shape_test.cpp",
    "src/depth_to_space_test.cpp",
    "src/equal_test.cpp",
    "src/erf_test.cpp",
    "src/exp_test.cpp",
    "src/flatten_test.cpp",
    "src/greater_equal_test.cpp",
    "src/greater_test.cpp",
    "src/instance_norm_test.cpp",
    "src/leaky_relu_test.cpp",
    "src/less_test.cpp",
    "src/lstm_test.cpp",
    "src/mock_idevice.cpp",
    "src/nncore_utils.cpp",
    "src/not_equal_test.cpp",
    "src/range_test.cpp",
    "src/select_test.cpp",
    "src/square_test.cpp",
    "src/unstack_test.cpp",
  ]

  configs = [ ":ops_config" ]

  deps = [
    "//third_party/googletest:gmock",
    "//third_party/googletest:gtest",
  ]

  external_deps = [
    "c_utils:utils",
    "drivers_interface_nnrt:libnnrt_proxy_2.1",
    "hilog:libhilog",
    "ipc:ipc_single",
    "mindspore:mindir",
    "neural_network_runtime:nnrt_target",
  ]

  subsystem_name = "ai"
  part_name = "neural_network_runtime"
}
