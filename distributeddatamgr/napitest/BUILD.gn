import("//test/xts/tools/build/suite.gni")
import("//foundation/distributeddatamgr/relational_store/relational_store.gni")

config("hilogndktest_config") {
  visibility = [ ":*" ]
  include_dirs = [
    "${relational_store_base_path}/interfaces/ndk/include",
    "${relational_store_innerapi_path}/rdb/include",
    "${relational_store_innerapi_path}/appdatafwk/include",
    "${relational_store_base_path}/interfaces/ndk/src",
  ]
}

ohos_moduletest_suite("ActsNdkTest") {
  sources = [ 
  "./src/rdb_store_backup_test.cpp",
  "./src/rdb_store_encrypt_test.cpp",
  "./src/rdb_store_level_test.cpp",
 ]
 
  external_deps = [ 
  "hilog_native:libhilog",
  "relational_store:native_rdb_ndk",
  ]
  
  deps = [ "//third_party/googletest:gtest_main" ]
  configs = [ ":hilogndktest_config" ]
}

group("napitest") {
  testonly = true
  deps = [ ":ActsNdkTest" ]
}