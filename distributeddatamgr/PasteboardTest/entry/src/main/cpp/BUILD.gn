import("//build/config/ohos/config.gni")
import("//build/ohos.gni")
import("//foundation/arkui/napi/napi.gni")
import("//foundation/distributeddatamgr/pasteboard/pasteboard.gni")

config("config") {
  visibility = [ ":*" ]

  cflags = [
    "-Wall",
    "-Werror",
    "-g3",
    "-Wunused-variable",
  ]
}

## PasteboardNdk ###############################################################
ohos_shared_library("PasteboardNdk") {
  subsystem_name = "distributeddatamgr"
  part_name = "pasteboard"

  include_dirs = [ "${udmf_interfaces_path}/ndk/data" ]
  sources = [ "./napi/pasteboard_test_ndk_test.cpp" ]

  configs = [ ":config" ]
  deps = [ "${udmf_interfaces_path}/ndk:libppasteboard" ]
  external_deps = [ "napi:ace_napi" ]

  output_extension = "so"
}

