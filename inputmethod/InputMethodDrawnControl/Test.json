{
    "description": "Configuration for hjunit demo Tests",
    "driver": {
        "type": "OHJSUnitTest",
        "test-timeout": "180000",
        "bundle-name": "com.acts.inputmethoddrawncontrol.test",
        "module-name": "phone",
        "shell-timeout": "600000",
        "testcase-timeout": "25000"
    },
    "kits": [
        {
            "type": "ShellKit",
            "run-command": [
                "param set persist.sys.suspend_manager_enabled 0",
                "reboot",
                "wait 5",
                "power-shell wakeup",
                "power-shell setmode 602",
                "uinput -T -m 300 720 300 360 200",
                "uinput -T -m 650 2760 650 1380 200"
            ],
            "teardown-command": [
                "param set persist.sys.suspend_manager_enabled 1",
                "reboot"
            ]
        },
        {
            "test-file-name": [
                "ActsInputMethodDrawnControlTest.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        }
    ]
}
