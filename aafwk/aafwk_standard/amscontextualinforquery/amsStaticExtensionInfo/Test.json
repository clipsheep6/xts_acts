{
    "description": "Configuration for hjunit demo Tests",
    "driver": {
        "type": "JSUnitTest",
        "test-timeout": "120000",
        "package": "com.example.staticextensioninfo",
        "shell-timeout": "60000"
    },
    "kits": [
        {
            "test-file-name": [
                "actsstaticextensiontest.hap",
                "staticextensionhap.hap",
                "extensionmodule.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },
        {
            "type": "ShellKit",
            "run-command": [
                "remount",
                "mkdir /data/test"
            ]
        },
        {
            "type": "PushKit",
            "push": [
                "actsstaticextensiontest.hap->/data/actsstaticextensiontest.hap",
                "staticextensionhap.hap->/data/staticextensionhap.hap",
                "extensionmodule.hap->/data/extensionmodule.hap"
            ]
        },
        {
            "type": "ShellKit",
            "run-command": [
                "chmod 644 /data/test/*.hap"
            ]
        }
    ]
}
