{
    "description": "Configuration for hjunit demo Tests",
    "driver": {
        "type": "JSUnitTest",
        "test-timeout": "120000",
        "package": "com.example.actsgetdisplayidtest",
        "shell-timeout": "60000"
    },
    "kits": [
        {
            "test-file-name": [
                "actsgetdisplayidtest.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },
        {
            "type": "ShellKit",
            "run-command": [
                "remount",
                "mkdir /data/test"
            ]
        },
        {
            "type": "PushKit",
            "push": [
                "actsspecifytesthap.hap->/data/test/actsspecifytesthap.hap"
            ]
        },
        {
            "type": "ShellKit",
            "run-command": [
                "chmod 644 /data/test/*.hap"
            ]
        }
    ]
}
