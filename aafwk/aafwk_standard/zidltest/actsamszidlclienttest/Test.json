{
    "description": "Configuration for hjunit demo Tests",
    "driver": {
        "type": "JSUnitTest",
        "test-timeout": "300000",
        "package": "com.example.zidlclienttest",
        "shell-timeout": "300000"
    },
    "kits": [
        {
            "test-file-name": [
                "ActsAmsZidlClientTest.hap",
                "ActsAmsZidlServiceRelyHap.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },
        {
            "type": "ShellKit",
            "run-command": [
                "remount"
            ]
        },
        {
            "type": "ShellKit",
            "run-command": [
                "chmod 644 /data/*.hap"
            ]
        }
    ]
}
