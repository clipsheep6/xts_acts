{
    "description": "Configuration for hjunit demo Tests",
    "driver": {
        "type": "JSUnitTest",
        "test-timeout": "300000",
        "package": "com.example.actsabilitypermissionthirdtest",
        "shell-timeout": "300000"
    },
    "kits": [
        {
            "test-file-name": [
                "ActsThirdAppATest.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },
        {
            "type": "ShellKit",
            "run-command": [
                "remount"
            ]
        },
        {
            "type": "PushKit",
            "push": [
                "ActsThirdAppATest.hap->/data/app/ActsThirdAppATest.hap"
            ]
        },
        {
            "type": "ShellKit",
            "run-command": [
                "chmod 644 /data/*.hap"
            ]
        }
    ]
}