{
    "description": "Configuration for hjunit demo Tests",
    "driver": {
        "type": "OHJSUnitTest",
        "test-timeout": "360000",
        "bundle-name": "com.example.accountplugintest",
        "module-name": "phone",
        "shell-timeout": "360000",
        "testcase-timeout": 150000
    },
    "kits": [
        {
            "test-file-name": [
                "ActsAppAccountPluginTest.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },
        {
            "type": "ShellKit",
            "teardown-command":[
                "bm uninstall -n com.example.accountplugintest"
            ]
        }
    ]
}