    "src/ActsVulkanDynamic_stateTest.cpp",
    "src/ActsVulkanFraction_mandatory_testsTest.cpp",
    "src/ActsVulkanFragment_operationsTest.cpp",
    "src/ActsVulkanFragment_shader_interlockTest.cpp",
