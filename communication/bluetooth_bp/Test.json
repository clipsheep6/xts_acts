{
    "description": "Configuration for bluetooth api Tests",
    "driver": {
        "type": "OHJSUnitTest",
        "test-timeout": "1000000",
        "bundle-name": "ohos.acts.communication.bluetooth.bluetoothhost",
        "module-name": "entry",
        "shell-timeout": "1000000",
        "testcase-timeout":1000000
    },
    "kits": [{
        "test-file-name": [
            "ActsBluetoothBpHapTest.hap"
        ],
        "type": "AppInstallKit",
        "cleanup-apps": true
    },
    {
        "type": "ShellKit",
        "run-command": [
            "power-shell setmode 602",
            "svc bluetooth enable"
        ]
    }]
}